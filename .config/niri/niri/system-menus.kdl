// System menu and monitor configuration bindings for niri

// Monitor and display configuration
binds {
    // Display/monitor configuration
    Mod+Ctrl+D { spawn "~/.config/niri/niri/scripts/display-config.sh"; }    // Graphical monitor configuration
    Mod+Ctrl+M { spawn "wlr-randr"; }                                         // Command-line monitor tool (fallback)
    
    // Alternative display tools (will use first available)
    Mod+Alt+D { spawn "~/.config/niri/niri/scripts/display-config.sh"; }
}

// System settings and configuration menus
binds {
    // Network settings menu
    Mod+Ctrl+N { spawn "plasmawindowed" "org.kde.plasma.networkmanagement"; }
    
    // Bluetooth settings menu  
    Mod+Ctrl+B { spawn "kcmshell6" "kcm_bluetooth"; }
    
    // Audio settings menu
    Mod+Ctrl+A { spawn "kcmshell6" "kcm_pulseaudio"; }
    
    // System settings
    Mod+Ctrl+S { spawn "systemsettings"; }
    
    // Quick settings panel (if using quickshell)
    Mod+Ctrl+Q { spawn "qs" "-c" "ii" "ipc" "call" "quickshell:sidebarRightToggle"; }
}

// Additional system tools
binds {
    // Task manager
    Mod+Ctrl+T { spawn "plasma-systemmonitor" "--page-name" "Processes"; }
    
    // File manager with admin privileges
    Mod+Ctrl+F { spawn "kdesu" "dolphin"; }
    
    // Network connection editor
    Mod+Shift+N { spawn "nm-connection-editor"; }
    
    // Bluetooth manager (alternative)
    Mod+Shift+B { spawn "bluedevil-wizard"; }
}